

<h1><%= @song.id ? 'Edit Song' : 'Create Song' %></h1>
<hr />
<%= form_for [@artist, @song] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :genre %>
  <%= f.text_field :genre %>

  <%= f.label :billb_id, "Billboard" %>
  <%= f.select :billb_id, @billbs.map{|n| [n.name, n.id]} << nil %>

  <%= f.submit %>
  <span class="ui button"><%= link_to 'Back', artist_path %></span>
<% end %>

